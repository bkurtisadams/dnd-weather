{{-- Weather report template --}} 
<div class="dnd-weather-report">
  <header class="report-header">
    <h2>{{localize "DND-WEATHER.Report.Title"}}</h2>
    <div class="timestamp">{{report.timestamp}}</div>
  </header>

  <div class="report-content">
    {{!-- Location Information --}}
    <section class="report-section location-info">
      <h3>{{localize "DND-WEATHER.Report.Location"}}</h3>
      <div class="info-grid">
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.Terrain"}}</label>
          <span>{{report.terrain}}</span>
        </div>
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.Elevation"}}</label>
          <span>{{report.elevation}} ft</span>
        </div>
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.Latitude"}}</label>
          <span>{{report.latitude}}째</span>
        </div>
      </div>
    </section>

    {{!-- Base Conditions --}}
    <section class="report-section base-conditions">
      <h3>{{localize "DND-WEATHER.Report.BaseConditions"}}</h3>
      <div class="info-grid">
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.Temperature"}}</label>
          <span>{{report.temperature.base}}째F</span>
        </div>
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.AdjustedTemp"}}</label>
          <span>{{report.temperature.adjusted}}째F</span>
        </div>
        {{#if report.temperature.windChill}}
          <div class="info-item">
            <label>{{localize "DND-WEATHER.Report.WindChill"}}</label>
            <span>{{report.temperature.windChill}}째F</span>
          </div>
        {{/if}}
      </div>
    </section>

    {{!-- Wind Conditions --}}
    <section class="report-section wind-conditions">
      <h3>{{localize "DND-WEATHER.Report.WindConditions"}}</h3>
      <div class="info-grid">
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.WindSpeed"}}</label>
          <span>{{report.wind.speed}} mph</span>
        </div>
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.WindDirection"}}</label>
          <span>{{report.wind.direction}}</span>
        </div>
      </div>
      {{#if report.wind.effects}}
        <div class="effects-list">
          <h4>{{localize "DND-WEATHER.Report.WindEffects"}}</h4>
          <ul>
            {{#each report.wind.effects}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </section>

    {{!-- Precipitation --}}
    <section class="report-section precipitation">
      <h3>{{localize "DND-WEATHER.Report.Precipitation"}}</h3>
      <div class="info-grid">
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.PrecipType"}}</label>
          <span>{{report.precipitation.type}}</span>
        </div>
        {{#if report.precipitation.amount}}
          <div class="info-item">
            <label>{{localize "DND-WEATHER.Report.PrecipAmount"}}</label>
            <span>{{report.precipitation.amount}} inches</span>
          </div>
        {{/if}}
        <div class="info-item">
          <label>{{localize "DND-WEATHER.Report.Duration"}}</label>
          <span>{{report.precipitation.duration}}</span>
        </div>
      </div>
      {{#if report.precipitation.effects}}
        <div class="effects-list">
          <h4>{{localize "DND-WEATHER.Report.PrecipEffects"}}</h4>
          <ul>
            {{#each report.precipitation.effects}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </section>

    {{!-- Special Events --}}
    {{#if report.specialEvents}}
      <section class="report-section special-events">
        <h3>{{localize "DND-WEATHER.Report.SpecialEvents"}}</h3>
        <div class="effects-list warning">
          <ul>
            {{#each report.specialEvents}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      </section>
    {{/if}}

    {{!-- Travel Effects --}}
    <section class="report-section travel-effects">
      <h3>{{localize "DND-WEATHER.Report.TravelEffects"}}</h3>
      <div class="effects-list">
        <ul>
          {{#each report.travelEffects}}
            <li>{{this}}</li>
          {{/each}}
        </ul>
      </div>
    </section>